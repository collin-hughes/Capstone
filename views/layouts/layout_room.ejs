<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="css/room.css">
    <script>
        if ((navigator.userAgent.toLowerCase().indexOf(" electron/") === -1) && "<%= clientAppOnly %>" === "true")
        {
            window.location.replace("/download-client");
        }

        const ROOM_ID = "<%= roomId %>";
